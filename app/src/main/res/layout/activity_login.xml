<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/img"
            android:layout_width="146dp"
            android:layout_height="131dp"
            android:layout_marginBottom="80dp"
            android:maxWidth="250dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toTopOf="@+id/first"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/vtInLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="44dp"
            android:text="Profile"/>
        <TextView
            android:id="@+id/firstNameInLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginTop="168dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/vtInLogin"
            />

        <TextView
            android:id="@+id/lastNameInLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginTop="32dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/firstNameInLogin"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

